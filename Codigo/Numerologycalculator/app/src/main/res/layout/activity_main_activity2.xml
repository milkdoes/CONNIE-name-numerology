<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.milkydeas.numerologycalculator.MainActivity2"
    android:id="@+id/activity2"
    android:background="#fffcffb7">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:textSize="25dp"
        android:id="@+id/button_Regresar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#6bb1a1ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ingresar nombre:"
        android:textSize="25dp"
        android:id="@+id/textView_Nombre"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/button_Regresar"
        android:layout_alignLeft="@+id/editText_Nombre"
        android:layout_alignStart="@+id/editText_Nombre"
        android:textColor="#ff00ca52" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_Nombre"
        android:layout_below="@+id/textView_Nombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dame el valor"
        android:textSize="30dp"
        android:id="@+id/button_Valor"
        android:background="#FFE5FF60"
        android:layout_below="@+id/editText_Nombre"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borra todo"
        android:textSize="30dp"
        android:id="@+id/button_Borrar"
        android:background="#FFE5FF60"
        android:layout_above="@+id/textView_Nombre"
        android:layout_alignRight="@+id/editText_Nombre"
        android:layout_alignEnd="@+id/editText_Nombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Numero del nombre:"
        android:textSize="20dp"
        android:id="@+id/textView_NumeroNombre"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/button_Valor"
        android:layout_alignLeft="@+id/editText_Nombre"
        android:layout_alignStart="@+id/editText_Nombre"
        android:textColor="#ff00ca52"
        android:freezesText="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Descripcion:"
        android:textSize="20sp"
        android:id="@+id/textView_Descripcion"
        android:layout_marginTop="31dp"
        android:layout_alignLeft="@+id/editText_Descripcion"
        android:layout_alignStart="@+id/editText_Descripcion"
        android:layout_alignTop="@+id/textView_NumeroNombre"
        android:textColor="#ff00ca52" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText_Descripcion"
        android:enabled="false"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:textColor="#ff719dff"
        android:layout_below="@+id/textView_Descripcion"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
