<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity1"
    android:id="@+id/activity1"
    android:background="#ffbcff7f">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verificar numerologia de nombre."
        android:textSize="30dp"
        android:id="@+id/button1"
        android:layout_below="@+id/textView_Subtitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CONNIE"
        android:textSize="50dp"
        android:id="@+id/textView_CONNIE"
        android:background="#ceffd586"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calculation of name numerology in entertainment."
        android:textSize="30dp"
        android:id="@+id/textView_Subtitulo"
        android:layout_gravity="center"
        android:layout_below="@+id/textView_CONNIE"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sobre la aplicacion"
        android:textSize="30dp"
        android:id="@+id/button_Sobre"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
